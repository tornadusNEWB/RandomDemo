package com.example;
import java.util.Random;
import java.util.Scanner;

public class Main {
    public static void main(String[] args) {

        Random generator = new Random();
        int value = generator.nextInt(3);

        Scanner scanner = new Scanner(System.in);
        System.out.println("podaj libcze");
        int uservalue = scanner.nextInt();

        while (value >= 0) {
            if (uservalue > value) {
                uservalue++;
                uservalue = scanner.nextInt();
                System.out.println("wybrana liczba jest wieksza od wybranej przez komputer");
                System.out.println("podaj kolejna liczbe");
            } else if (uservalue < value) {
                uservalue++;
                uservalue = scanner.nextInt();
                System.out.println("wybrana liczba jest mniejsza od wybranej przez komputer");
                System.out.println("podaj kolejna liczbe");

            } else if ( uservalue == value) {
                System.out.println("brawo, wygrales za " + uservalue + " razem");
                break;
            }

        }
    }
}



